{
  "manifest_version": 3,
  "name": "Pockest",
  "version": "1.0.0",
  "description": "쇼핑 위시리스트 & 가격 비교",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "action": {
    "default_title": "Pockest Open SidePanel"
  },
  "side_panel": {
    "default_path": "src/pages/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.smartstore.naver.com/*",
        "*://*.shopping.naver.com/*",
        "*://*.coupang.com/*",
        "*://*.gmarket.co.kr/*",
        "*://*.11st.co.kr/*",
        "*://*.auction.co.kr/*",
        "*://*.ssg.com/*",
        "*://*.lotteon.com/*",
        "*://*.musinsa.com/*",
        "*://*.29cm.co.kr/*",
        "*://*.wconcept.co.kr/*",
        "*://*.amazon.com/*",
        "*://*.amazon.co.jp/*",
        "*://*.aliexpress.com/*",
        "*://*.ebay.com/*"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "identity",
    "sidePanel",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.smartstore.naver.com/*",
    "*://*.shopping.naver.com/*",
    "*://*.coupang.com/*",
    "*://*.gmarket.co.kr/*",
    "*://*.11st.co.kr/*",
    "*://*.auction.co.kr/*",
    "*://*.ssg.com/*",
    "*://*.lotteon.com/*",
    "*://*.musinsa.com/*",
    "*://*.29cm.co.kr/*",
    "*://*.wconcept.co.kr/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.jp/*",
    "*://*.aliexpress.com/*",
    "*://*.ebay.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/pages/popup/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://accounts.google.com;"
  }
}
